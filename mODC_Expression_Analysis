#A simple BWA alignment against the mODC gene sequence to check if mODC was expressed


## on server, type BWA to make sure the program is installed:
#### good
##### Program: bwa (alignment via Burrows-Wheeler transformation)
##### Version: 0.7.9a-r786

##move fasta file with mODC sequence onto server 
scp -p -r -C -P 22 /Users/karasarver/RNAseq_Scripts/mODC.fasta name@serverAddress:~/at_RNAseq/150330

##make the reference index file
#### in at_RNAseq, make a new folder
mkdir BWA_mODCs
bwa index -p mODC_idx -a is mODC.fasta
samtools mODCindx2 mODC.fasta

#:~/at_RNAseq/BWA_mODC$ bwa index -p mODC_idx -a is mODC.fasta
#[bwa_index] Pack FASTA... 0.00 sec
#[bwa_index] Construct BWT for the packed sequence...
#[bwa_index] 0.00 seconds elapse.
#[bwa_index] Update BWT... 0.00 sec
#[bwa_index] Pack forward-only FASTA... 0.00 sec
#[bwa_index] Construct SA from BWT and Occ... 0.00 sec
#[main] Version: 0.7.9a-r786
#[main] CMD: bwa index -p mODC_idx -a is mODC.fasta
#[main] Real time: 0.357 sec; CPU: 0.006 sec


##do alignments!!


##########################################Cnst0_1 
mkdir BWA_Cnst0_1  #etc...
#concatenate files in 
cat ~/at_RNAseq/150116/Sample_Cnst0_Rep1/trimmomatic_Cnst0_1/Cnst0_1_1P  ~/at_RNAseq/150330/Sample_Cnst0_Rep1/Trimmomatic_2Cnst0_1/2Cnst0_1_1P >3Cnst0_1_1P
cat ~/at_RNAseq/150116/Sample_Cnst0_Rep1/trimmomatic_Cnst0_1/Cnst0_1_2P  ~/at_RNAseq/150330/Sample_Cnst0_Rep1/Trimmomatic_2Cnst0_1/2Cnst0_1_2P >3Cnst0_1_2P
cat ~/at_RNAseq/150116/Sample_Cnst0_Rep1/trimmomatic_Cnst0_1/Cnst0_1_1U  ~/at_RNAseq/150330/Sample_Cnst0_Rep1/Trimmomatic_2Cnst0_1/2Cnst0_1_1U >3Cnst0_1_1U
cat ~/at_RNAseq/150116/Sample_Cnst0_Rep1/trimmomatic_Cnst0_1/Cnst0_1_2U  ~/at_RNAseq/150330/Sample_Cnst0_Rep1/Trimmomatic_2Cnst0_1/2Cnst0_1_2U >3Cnst0_1_2U

#### Have to do all files separately... 
bwa aln -t 4 ../mODC_idx 3Cnst0_1_1P >  Cnst0_1_1P.txt.bwa		#DONE
bwa aln -t 4 ../mODC_idx 3Cnst0_1_2P >  Cnst0_1_2P.txt.bwa		#DONE
bwa sampe ../mODC_idx Cnst0_1_1P.txt.bwa Cnst0_1_2P.txt.bwa 3Cnst0_1_1P 3Cnst0_1_2P > Cnst0_1_P.txt.sam
bwa aln -t 4 ../mODC_idx 3Cnst0_1_1U >  Cnst0_1_1U.txt.bwa
bwa samse ../mODC_idx Cnst0_1_1U.txt.bwa 3Cnst0_1_1U > Cnst0_1_1U.txt.sam
bwa aln -t 4 ../mODC_idx 3Cnst0_1_2U >  Cnst0_1_2U.txt.bwa
bwa samse ../mODC_idx Cnst0_1_2U.txt.bwa 3Cnst0_1_2U > Cnst0_1_2U.txt.sam
rm *txt.bwa
cd ..
##########################################Cnst0_2
mkdir BWA_Cnst0_2 
cd BWA_Cnst0_2
#concatenate files in the new folder
cat ~/at_RNAseq/150116/Sample_Cnst0_Rep2/Trimmomatic_Cnst0_2/Cnst0_2_1P  ~/at_RNAseq/150330/Sample_Cnst0_Rep2/Trimmomatic_2Cnst0_2/2Cnst0_2_1P >3Cnst0_2_1P
cat ~/at_RNAseq/150116/Sample_Cnst0_Rep2/Trimmomatic_Cnst0_2/Cnst0_2_2P  ~/at_RNAseq/150330/Sample_Cnst0_Rep2/Trimmomatic_2Cnst0_2/2Cnst0_2_2P >3Cnst0_2_2P
cat ~/at_RNAseq/150116/Sample_Cnst0_Rep2/Trimmomatic_Cnst0_2/Cnst0_2_1U  ~/at_RNAseq/150330/Sample_Cnst0_Rep2/Trimmomatic_2Cnst0_2/2Cnst0_2_1U >3Cnst0_2_1U
cat ~/at_RNAseq/150116/Sample_Cnst0_Rep2/Trimmomatic_Cnst0_2/Cnst0_2_2U  ~/at_RNAseq/150330/Sample_Cnst0_Rep2/Trimmomatic_2Cnst0_2/2Cnst0_2_2U >3Cnst0_2_2U

#### Have to do align files separately... 
bwa aln -t 4 ../mODC_idx 3Cnst0_2_1P >  Cnst0_2_1P.txt.bwa
bwa aln -t 4 ../mODC_idx 3Cnst0_2_2P >  Cnst0_2_2P.txt.bwa
bwa sampe ../mODC_idx Cnst0_2_1P.txt.bwa Cnst0_2_2P.txt.bwa 3Cnst0_2_1P 3Cnst0_2_2P > Cnst0_2_P.txt.sam
bwa aln -t 4 ../mODC_idx 3Cnst0_2_1U >  Cnst0_2_1U.txt.bwa
bwa samse ../mODC_idx Cnst0_2_1U.txt.bwa 3Cnst0_2_1U > Cnst0_2_1U.txt.sam
bwa aln -t 4 ../mODC_idx 3Cnst0_2_2U >  Cnst0_2_2U.txt.bwa
bwa samse ../mODC_idx Cnst0_2_2U.txt.bwa 3Cnst0_2_2U > Cnst0_2_2U.txt.sam
rm *txt.bwa
cd ..
##########################################Cnst0_3
mkdir BWA_Cnst0_3  
cd BWA_Cnst0_3
#concatenate files in the new folder
cat ~/at_RNAseq/150116/Sample_Cnst0_Rep3/Trimmomatic_Cnst0_3/Cnst0_3_1P  ~/at_RNAseq/150330/Sample_Cnst0_Rep3/Trimmomatic_2Cnst0_3/2Cnst0_3_1P >3Cnst0_3_1P
cat ~/at_RNAseq/150116/Sample_Cnst0_Rep3/Trimmomatic_Cnst0_3/Cnst0_3_2P  ~/at_RNAseq/150330/Sample_Cnst0_Rep3/Trimmomatic_2Cnst0_3/2Cnst0_3_2P >3Cnst0_3_2P
cat ~/at_RNAseq/150116/Sample_Cnst0_Rep3/Trimmomatic_Cnst0_3/Cnst0_3_1U  ~/at_RNAseq/150330/Sample_Cnst0_Rep3/Trimmomatic_2Cnst0_3/2Cnst0_3_1U >3Cnst0_3_1U
cat ~/at_RNAseq/150116/Sample_Cnst0_Rep3/Trimmomatic_Cnst0_3/Cnst0_3_2U  ~/at_RNAseq/150330/Sample_Cnst0_Rep3/Trimmomatic_2Cnst0_3/2Cnst0_3_2U >3Cnst0_3_2U

#### Have to do all files separately... 
bwa aln -t 4 ../mODC_idx 3Cnst0_3_1P >  Cnst0_3_1P.txt.bwa
bwa aln -t 4 ../mODC_idx 3Cnst0_3_2P >  Cnst0_3_2P.txt.bwa
bwa sampe ../mODC_idx Cnst0_3_1P.txt.bwa Cnst0_3_2P.txt.bwa 3Cnst0_3_1P 3Cnst0_3_2P > Cnst0_3_P.txt.sam
bwa aln -t 4 ../mODC_idx 3Cnst0_3_1U >  Cnst0_3_1U.txt.bwa
bwa samse ../mODC_idx Cnst0_3_1U.txt.bwa 3Cnst0_3_1U >Cnst0_3_1U.txt.sam
bwa aln -t 4 ../mODC_idx 3Cnst0_3_2U >  Cnst0_3_2U.txt.bwa
bwa samse ../mODC_idx Cnst0_3_2U.txt.bwa 3Cnst0_3_2U > Cnst0_3_2U.txt.sam
